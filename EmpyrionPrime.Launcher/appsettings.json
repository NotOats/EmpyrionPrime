{
    "Empyrion": {
        "ServerPath": "PATH_TO_EGS_SERVER",
        "DedicatedFile": "dedicated.yaml",

        "EpmAddress": "127.0.0.1",
        "EpmPort": 12345
    },
    "Plugins": {
        "Folder": "Plugins",
